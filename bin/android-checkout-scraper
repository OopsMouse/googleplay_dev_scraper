#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

# design time...
lib = File.expand_path('../lib', File.dirname(__FILE__))
$LOAD_PATH.unshift(lib)

require 'optparse'
require 'android-checkout-scraper'

module AndroidCheckoutScraper
  class Tool
    def main
      # parse arguments
      opts = OptionParser.new do |opt|
        opt.on('-c command', 'set command') {|v| p v}
        opt.on('-u username', 'set username') {|v| p v}
        opt.on('-p password', 'set password') {|v| p v}
        opt.on('-a dev_acc', 'set dev_acc') {|v| p v}

        opt.on('-P host:port', 'Set HTTP proxy/port') {|v| p v}
        opt.on('--details', 'Show detail CSV for order list') {|v| p v}
        opt.parse!(ARGV)
      end
    end
  end
end

tool = AndroidCheckoutScraper::Tool.new
tool.main

